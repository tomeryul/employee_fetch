<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="4dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow_500"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/emp_IMG_employee"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_launcher_background" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/employee_LBL_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/emp_IMG_employee"
            android:maxLines="1"
            android:minLines="1"
            android:text="first name: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/employee_LBL_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/employee_LBL_first_name"
            android:layout_alignStart="@id/employee_LBL_first_name"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:minLines="1"
            android:text="last name: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/employee_LBL_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/employee_LBL_last_name"
            android:layout_alignStart="@id/employee_LBL_last_name"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:minLines="1"
            android:text="id: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/employee_LBL_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/employee_LBL_id"
            android:layout_alignStart="@id/employee_LBL_last_name"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:minLines="1"
            android:text="Email: "
            android:textColor="@color/black"
            android:textSize="12sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>